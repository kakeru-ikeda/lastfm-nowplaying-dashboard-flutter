{
  "name": "lastfm-nowplaying-dashboard-server",
  "version": "1.0.0",
  "description": "Node.js server for serving Flutter web build",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "clean": "flutter clean",
    "deps": "flutter pub get",
    "generate": "dart run build_runner build --delete-conflicting-outputs",
    "build": "npm run clean && npm run deps && npm run generate && flutter build web",
    "build:serve": "npm run build && npm start"
  },
  "dependencies": {
    "express": "^4.18.2",
    "compression": "^1.7.4",
    "helmet": "^7.0.0",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "flutter",
    "web",
    "express",
    "static-server"
  ],
  "author": "",
  "license": "MIT"
}
